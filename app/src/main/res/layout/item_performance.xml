<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bac">
    <android.support.v7.widget.CardView
        android:id="@+id/item_performance_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@color/cardBac">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_performance_semester_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_a1"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="目标"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:maxLength="10"
                android:textColor="@color/textColor" />
            <TextView
                android:id="@+id/item_performance_target_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:text="20"
                android:gravity="right"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/perbg" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="实际"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:maxLength="10"
                android:textColor="@color/textColor" />
            <TextView
                android:id="@+id/item_performance_actual_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="20"
                android:textStyle="bold"
                android:textColor="@color/yellow" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>