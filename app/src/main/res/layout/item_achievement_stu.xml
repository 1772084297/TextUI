<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bac">
    <android.support.v7.widget.CardView
        android:id="@+id/item_commonly_url_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@color/cardBac">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_score1"/>
            <TextView
                android:id="@+id/item_achievementStuView_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="计算机组成原理"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:maxLength="10"
                android:textColor="@color/textColor" />
            <TextView
                android:id="@+id/item_achievementStuView_score"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:text="3.98"
                android:textStyle="bold"
                android:textColor="@color/pink" />
            <ImageView
                android:id="@+id/item_achievementStuView_status"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_gold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>