<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        tools:background="#6f6f6f">

        <RelativeLayout
            android:id="@+id/rlTitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--姓名-->
            <TextView
                android:id="@+id/card_stuName"
                style="@style/SportCardStyle.SportTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                tools:text="Table tennis" />


            <!--排名-->
            <TextView
                android:id="@+id/card_rank"
                style="@style/SportCardStyle.SportRound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_stuName"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                tools:text="Top 1" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/rlTitleContainer"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_image">

            <!--学院-->
            <TextView
                android:id="@+id/card_stuCollege"
                style="@style/SportCardStyle.Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                tools:text="信息科学与工程学院" />

            <!--班级-->
            <TextView
                android:id="@+id/card_stuClass"
                style="@style/SportCardStyle.DayPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_stuCollege"
                android:layout_centerHorizontal="true"
                tools:text="计算机1601" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>