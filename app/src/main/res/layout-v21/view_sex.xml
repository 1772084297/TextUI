<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_sex_linearLayout"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/view_sex_outer_cardView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@color/cardBac">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardBac">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/cardBac">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/w_man"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/view_card_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="男女比例"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/textColor"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/view_sex_inner_cardView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/view_sex_man_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/pink"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="left"/>
                    <TextView
                        android:id="@+id/view_sex_woman_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/blue"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="right"/>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/view_sex_linearLayout_num"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ProgressBar
                        android:id="@+id/view_sex_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/view_sex_linearLayout_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择学院"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp" />
                    <org.angmarch.views.NiceSpinner
                        android:id="@+id/view_sex__niceSpinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/view_sex_piaCharView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
